<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SafeDeviceChecker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!-- ColorAccent -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

    </style>

    <style name="Theme.SafeDeviceChecker" parent="Base.Theme.SafeDeviceChecker" />

    <style name="MyTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/manrope</item>
    </style>

    <style name="MyTextStyleNormal">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/manrope</item>
    </style>

    <style name="MyTextStyleBlue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">normal</item>юб
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="MyButtonStyle_Blue">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_extralight</item>
    </style>

    <style name="MyButtonStyle_White" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:strokeColor">@color/blue</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:background">@drawable/rounded_corners_edittext</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">258dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
<!--        <item name="android:fontFamily">@font/manrope</item>-->
    </style>
</resources>